# Environment Variables for Rithu by AAha
# Copy this file to .env and fill in the values

# ================================
# DATABASE
# ================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Get this from Supabase or Neon dashboard
DATABASE_URL="postgresql://postgres:password@localhost:5432/rithu_aaha?schema=public"

# ================================
# AUTHENTICATION
# ================================
# Auth.js (NextAuth v5)
AUTH_SECRET="generate-this-with-openssl-rand-base64-32"
AUTH_URL="http://localhost:3000"

# ================================
# PAYMENT (RAZORPAY)
# ================================
RAZORPAY_KEY_ID="rzp_test_..."
RAZORPAY_KEY_SECRET="..."

# ================================
# EMAIL (RESEND)
# ================================
# Get this from https://resend.com/api-keys
RESEND_API_KEY="re_..."
EMAIL_FROM="noreply@rithubyaaha.com"

# ================================
# FILE UPLOADS
# ================================
# Cloudinary or AWS S3
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# ================================
# AI SEARCH (OPTIONAL)
# ================================
# OpenAI for embeddings
OPENAI_API_KEY="sk-..."

# ================================
# RATE LIMITING (UPSTASH)
# ================================
# Get these from https://console.upstash.com
UPSTASH_REDIS_REST_URL="https://..."
UPSTASH_REDIS_REST_TOKEN="..."

# ================================
# ANALYTICS (OPTIONAL)
# ================================
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-..."
